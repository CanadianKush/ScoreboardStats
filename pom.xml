<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.github.games647</groupId>
    <artifactId>scoreboardstats</artifactId>
    <version>0.5.6</version>
    <packaging>jar</packaging>
    <description>Show the Scoreboard with custom variables</description>
    <url>http://dev.bukkit.org/server-mods/scoreboardstats</url>
    <name>ScoreboardStats</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <issueManagement>
        <system>GitHub</system>
        <url>https://github.com/games647/ScoreboardStats/issues</url>
    </issueManagement>

    <scm>
        <url>https://github.com/games647/ScoreboardStats</url>
        <tag>HEAD</tag>
        <connection>scm:git:git://github.com/games647/ScoreboardStats.git</connection>
        <developerConnection>scm:git:ssh://git@github.com:games647/ScoreboardStats.git</developerConnection>
    </scm>

    <repositories>
        <repository>
            <id>vault-repo</id>
            <url>http://ci.herocraftonline.com/plugin/repository/everything</url>
        </repository>

        <repository>
            <id>bukkit-repo</id>
            <url>http://repo.bukkit.org/content/groups/public/</url>
        </repository>
    </repositories>

    <dependencies>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>.</groupId>
            <artifactId>Essentials</artifactId>
            <version>2.11.1.2</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/Essentials.jar</systemPath>
            <type>jar</type>
        </dependency>

        <dependency>
            <groupId>.</groupId>
            <artifactId>SimpleClans</artifactId>
            <version>1.0.2</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/SimpleClans.jar</systemPath>
            <type>jar</type>
        </dependency>

        <dependency>
            <groupId>.</groupId>
            <artifactId>SimpleClans2</artifactId>
            <version>2.4.1</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/SimpleClans-2.4.1.jar</systemPath>
            <type>jar</type>
        </dependency>

        <dependency>
            <groupId>.</groupId>
            <artifactId>InSigns</artifactId>
            <version>1.4</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/InSigns_v1.4.jar</systemPath>
            <type>jar</type>
        </dependency>

        <dependency>
            <groupId>.</groupId>
            <artifactId>mcMMO</artifactId>
            <version>1.4.06 B2</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/mcMMO.jar</systemPath>
            <type>jar</type>
        </dependency>

        <dependency>
            <groupId>.</groupId>
            <artifactId>Factions</artifactId>
            <version>1.8.2</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/Factions.jar</systemPath>
            <type>jar</type>
        </dependency>


        <dependency>
            <groupId>.</groupId>
            <artifactId>Factions2</artifactId>
            <version>2.0</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/Factions2.jar</systemPath>
            <type>jar</type>
        </dependency>

        <dependency>
            <groupId>.</groupId>
            <artifactId>Jobs</artifactId>
            <version>1.0.2</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/Jobs.jar</systemPath>
            <type>jar</type>
        </dependency>

        <dependency>
            <groupId>.</groupId>
            <artifactId>Heroes</artifactId>
            <version>1.5.2</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/Heroes.jar</systemPath>
            <type>jar</type>
        </dependency>

        <dependency>
            <groupId>net.milkbowl.vault</groupId>
            <artifactId>Vault</artifactId>
            <version>0.0.1-SNAPSHOT</version>
            <type>jar</type>
        </dependency>

        <dependency>
            <groupId>org.bukkit</groupId>
            <artifactId>craftbukkit</artifactId>
            <version>1.5.2-R1.0</version>
            <type>jar</type>
        </dependency>
    </dependencies>

    <build>
        <defaultGoal>clean install</defaultGoal>
        <finalName>${project.name}</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                    <debug>false</debug>
                    <showWarnings>true</showWarnings>
                    <showDeprecation>true</showDeprecation>
                    <verbose>true</verbose>
                    <optimize>true</optimize>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <excludes>
                        <exclude>**/variables/</exclude>
                    </excludes>
                </configuration>
            </plugin>
        </plugins>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>**</include>
                </includes>
            </resource>
        </resources>
    </build>
</project>